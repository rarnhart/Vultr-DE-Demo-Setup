# =============================================================================
# Vultr Kubernetes Terraform Configuration
# Version: 1.0.0
# =============================================================================

# REQUIRED: Vultr API Key
vultr_api_key = "INSERT_YOUR_VULTR_API_KEY_HERE"

# Cluster Configuration
region             = "ord"  # Chicago
cluster_name       = "de-k8s-cluster"
kubernetes_version = "v1.34.1+3"

# Node Pool
node_pool_name     = "de-pool"
node_size          = "vc2-4c-8gb"
node_count         = 3
enable_autoscaling = false
min_nodes          = 3
max_nodes          = 5

# Domain Configuration
domain                = "example.com"
dns_subdomain         = ""  # Empty for *.example.com, or "lab" for *.lab.example.com
cert_subdomains       = ["app", "api"]
letsencrypt_email     = "admin@example.com"
letsencrypt_server    = "https://acme-staging-v02.api.letsencrypt.org/directory"   # Staging
# letsencrypt_server    = "https://acme-v02.api.letsencrypt.org/directory"         # Production

# DNS Provider
dns_provider          = "manual"  # "cloudflare" or "manual"
# cloudflare_api_token  = "INSERT_YOUR_CLOUDFLARE_TOKEN_HERE"

# Component Versions
cert_manager_version   = "v1.16.1"
envoy_gateway_version  = "v1.2.3"
metrics_server_version = "3.12.2"

# Reliability
kubectl_retry_attempts = 3
kubectl_retry_delay    = 10

# Tags
tags = ["dynamic-engine", "kubernetes"]
